<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table class="table">
  <thead>
    <tr>
      <th>Caption</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.caption %></td>
        <td><%= image_tag image.caption_image %></td>
        <td><%= link_to 'Show', image %></td>
        <% if user_signed_in? && current_user.id == image&.user&.id %>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Image', new_image_path %>
<% end %>
